.resume
  h1 {{name}}
  h2 {{careerTitle}}

  article
    resume-section(label='Summary')
      ul
        li 15 Years of professional software development experience (35 years old)
        li Self-taught at the age of 19
        li First professional job was at the age of 20
        li Started as a designer & front-end developer
        li Has worked on Federal, State, Military, B2B and Consumer applications
        li Co-founded a VC funded startup in 2012
        li 2x Startup Weekend Winner

    resume-section(label='Roles')
      .area
        .two-columns
          h4 Primary
          ul
            li: filter-tag(key='frontend', years='15', type='role')
            li: filter-tag(key='backend', years='13', type='role')
            li: filter-tag(key='web-architecture', years='7', type='role')
            li: filter-tag(key='tech-leadership', years='7', type='role')
        .two-columns
          h4 Secondary
          ul
            li: filter-tag(key='agile-pm', years='6', type='role')
            li: filter-tag(key='product-management', years='3', type='role')
            li: filter-tag(key='devops', years='0', type='role')


    resume-section(label='Skills')
      .area
        h4 Primary
        ul.two-columns
          li: filter-tag(key='ror', years='4', type='skill')
