          li: filter-tag(key='html', years='15', type='skill')
          li: filter-tag(key='nodejs', years='3', type='skill')
        ul.two-columns
          li: filter-tag(key='aws', years='0', type='skill')
          li: filter-tag(key='docker', years='1', type='skill')
          li: filter-tag(key='mongodb', years='4', type='skill')
          li: filter-tag(key='sqlserver', years='10', type='skill')
          li: filter-tag(key='c#', years='9', type='skill')
          li: filter-tag(key='aspnetmvc', years='3', type='skill')

      .area
