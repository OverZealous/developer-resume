.team
  h5
    | {{team.name}}
    span.title(ng-if='team.title') , {{team.title}}
    span.date(ng-if='team.date') {{team.date}}
  div(ng-if='shouldShowTeam()')
    p(ng-if='team.summary') {{team.summary}}

    tags-used(label='Roles', items='team.roles', type='role')

    .project(ng-repeat='project in team.projects')
      h4
        a(href="{{project.url}}") {{project.name}}
        span {{project.type}}
      .project-details
        div(ng-if='shouldShowProject(project)')
          p(ng-if='project.summary') {{project.summary}}

          .role(ng-repeat='role in project.roles', ng-if='shouldShowRole(role)')
            h4 {{role.name}}
            p(ng-if='role.summary') {{role.summary}}

            .role-details
              tags-used(label='Technologies', items='role.skills', type='skill')

              div(ng-if='role.highlights')
                h6 Highlights
                ul(ng-if='shouldShowHighlights(role)')
                  highlight(ng-repeat='item in role.highlights', item='item')
                .notice(ng-if='!shouldShowHighlights(role)')
                  | There are no {{filterName()}} related items to show.
                  clear-filters

              .samples(ng-if='role.samples')
                h6 Code Samples
                ul.inline-items
                  li(ng-repeat='sample in role.samples')
                    a {{sample.name}}
        .notice(ng-if='!shouldShowProject(project)')
          | This project is not relevant to {{filterName()}}.
          clear-filters
  .notice(ng-if='!shouldShowTeam()')
    | This item is not relevant to {{filterName()}}.
    clear-filters
